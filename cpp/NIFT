//****************************************************************************
//                       FUNCTION TO INPUT INFORMATION
//****************************************************************************

void admission::get()
{clrscr();
adm_no=a1.draw_nos();
cout<<"\n\n Your admission no.is :: "<<adm_no<<endl;
cout<<"\n\n Enter your serial no  :: "<<endl;
cin>>serial_no;
cout<<"\n\n Enter your name :: "<<endl;
gets(name);
cout<<"\n\n Enter the course you want to opt :: (FD,TD) ::"<<endl;
again:
gets(course);
if(!((strcmp(course,"FD")==0)||(strcmp(course,"TD")==0)))
{
cout<<"\nSorry !! You opted a wrong course"<<endl;
cout<<"\n\nPlease !! Enter again, the course you wanna opt (FD,TD) :: "<<endl;
goto again;     //JUMP STSTEMENT
}
}


//****************************************************************************
//     		          FUNCTION TO READ INFORMATION
