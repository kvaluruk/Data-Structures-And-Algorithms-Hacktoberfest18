	 ++s2;
	 cout<<"\n\nCongrats!!! U got admission at nift" ;
       }
       else if(k5==0)
	 cout<<"\nSorry!! You cannot take admission at nift";
break;
default:cout<<"\n\nSorry!! You entered a wrong choice";
}
}
else
cout<<"\nSorry!! You cannot take admission";
}


//*******************************************************************************************************************
//THIS STUDENT TAKES ELIGIBILTY TEST OF A STUDENT FOR ADMISSION IN DESIGN DEPARTMENT AT BACHELOR LEVEL
//*******************************************************************************************************************

int verify::b_design()
{             clrscr();
char p1,p2,p3;
 cout<<"\n\n Do u have a passing grade in 10+2 exam of CBSE ? ";
cin>>p1;
cout<<"\n Do u have a 3 or 4 years diploma recognised by AICTE or SBTE ? ";
cin>>p2;
cout<<"\n Do u have a passing grade in SSSE conducted by National Open School ? ";
cin>>p3;
if(((p1=='y')||(p1=='Y'))||((p2=='y')||(p2=='Y'))||((p3=='y')||(p3=='Y')))
 return 1;
else
 return 0;

}


