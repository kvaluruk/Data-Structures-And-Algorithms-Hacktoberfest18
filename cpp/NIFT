//****************************************************************************
//                       FUNCTION TO KNOW ABOUT NIFT
//****************************************************************************

void nift::know()
{clrscr();
int q5,q6;
do
{
q5=nift_menu();
switch(q5)
{
case 1:cout<<"\n\nNIFT offers 13 CENTRES in India and one INTERNATIONAL CENTRE at Mauritius";
cout<<"\n-----------------------------------------------------------------";
cout<<"\n\n\nIn India these centres are located at:";
cout<<"\nBengaluru"<<"\n"<<"Kolkata"<<"\n"<<"Bhopal"<<"\n"<<"Mumbai"<<"\n"<<"Chennai"<<"\n"<<"New Delhi"<<"\n";
cout<<"Gandhinagar"<<"\n"<<"Patna"<<"\n"<<"Hyderabad"<<"\n"<<"Raebareli"<<"\n"<<"Kangra"<<"\n"<<"Shillong"<<"\n"<<"Kannur"<<"\n";
cout<<"\n----------------------------------------------------------------";
break;
case 2:cout<<"\n-----------------------------------------------------";
cout<<"\n\t HEAD OFICE";
cout<<"\n Address:NIFT campus, \n Hauz Khas,\n Near Gulmohar Park,\n New Delhi-110 016 ";
cout<<"\n--------------------------------------------------------------";
 break;
case 3:cout<<"\n\nNIFT offers following programmes:";
       do
       {
       q6=prog_menu();
       switch(q6)
      {
	 case 1:p1.d_prog();
	break;
	 case 2: p1.t_prog();
	break;
	 default:cout<<"\n\nSorry!! You entered a wrong choice";
      }
      cout<<"\n\nWanna go back to menu 11 :: ";
      cin>>x1;
      }while((x1=='y')||(x1=='Y'));
      break;
case 4:cout<<"\nThe upper age for applying in bachelor programme is restricted to 23 years";
break;
case 5:cout<<"\n\n	Total no. of seats at nift :: ";
cout<<"\n	Total Seats at Bachelor Programme :: "<<100;
cout<<"\n	Total Seats at Master Programme :: "<<100;
cout<<"\n\n	Seats left at Bachelor Programme :: "<<100-s1;
cout<<"\n	Seats left at Master Programme :: "<<100-s2;
break;
default:cout<<"\n\nSorry!! You entered a wrong choice";
}
cout<<"\n\nDo u wanna go back to menu 10 :: ";
cin>>x2;
}while((x2=='y')||(x2=='Y'));
}

