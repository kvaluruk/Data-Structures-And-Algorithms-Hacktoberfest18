//*******************************************************************************************************************
//THIS FUNCTION  TAKES ELIGIBILTY TEST OF A STUDENT FOR ADMISSION IN MANAGEMENT DEPARTMENT AT MASTER LEVEL
//*******************************************************************************************************************

int verify::m_man()
{clrscr();
char d1,d2;
cout<<"\n\nHave you a 3 years Bachelor design recognised by AIU ? ";
cin>>d1;
cout<<"\nHave you any diploma in fashion design ? ";
cin>>d2;
if(((d1=='y')||(d1=='Y'))||((d2=='y')||(d2=='Y')))
 return 1;
else
 return 0;

}

//****************************************************************************************************************
