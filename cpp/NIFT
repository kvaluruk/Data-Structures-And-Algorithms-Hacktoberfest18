	 cin>>choice1;
	 }while((choice1=='y')||(choice1=='Y'));

break;
case 2:
       cout<<"\nThe information of students at NIFT :: ";
       as.display();
break;
case 3:
       as.mod();
break;
case 4:
as.del();
break;
case 5:
as.insert();
break;
case 6:
as.search();
break;
case 7:
n1.subsidy();
break;
case 8:
n1.gen_cal();
break;
case 9:
n1.adm_test();
break;
case 10:
n1.know();
break;
case 11:
n1.intro();
break;
case 12:
cout<<"\n!!!!!!!!EXITING!!!!!!!!!";
exit(0);
break;
default:cout<<"\n\nSorry!! U entered a wrong choice ";
}
cout<<"\n\nWanna go back to main menu :: ";
cin>>choice;
}while((choice=='y')||(choice=='Y'));
getch();
}
