{
clrscr();

cout<<"\n\nAdmission No. :: "<<adm_no;
cout<<"\n\nSerial No. :: "<<serial_no;
cout<<"\n\nName :: "<<name;
cout<<"\n\nCourse :: "<<course;

}



//****************************************************************************
//                     FUNCTION TO TAKE ADMISSION AT NIFT
//****************************************************************************

void adm()
{                         clrscr();
ofstream fout;
fout.open("file1.dat",ios::app|ios::binary);
a1.get();
fout.write((char*)&a1,sizeof(a1));
fout.close();
}


//****************************************************************************
//                        FUNCTION TO DISPLAY RECORDS
//****************************************************************************

void querry::display()
{            clrscr();
ifstream fin;
fin.open("file1.dat",ios::binary);
while(!fin.eof())
{
fin.read((char*)&a1,sizeof(a1));
if(fin.eof())
	break;
a1.put();
getch();
}
fin.close();
}


//****************************************************************************
//                        FUNCTION TO MODIFY RECORDS
//****************************************************************************

void querry::mod()
{           clrscr();
int i;
char found='n';
ifstream fin;
fin.open("file1.dat",ios::binary);
ofstream fout;
fout.open("folder1.dat",ios::binary);
int n;
cout<<"\n\nEnter the serial no of student whose record is to be modified :: "<<endl;
cin>>n;
while(!fin.eof())
{
fin.read((char*)&a1,sizeof a1);
if(fin.eof())
break;
if(a1.ad()==n)
{
found='f';
a1.put();
getch();
cout<<"\n\nEnter the new details of the student :: ";
a2.get();
fout.write((char*)&a2,sizeof a2);
}
else
fout.write((char*)&a1,sizeof a1);
}
if(found=='n')
cout<<"\n\nSORRY!! Student has no record at NIFT";
fin.close();
fout.close();
remove("file1.dat");
rename("folder1.dat","file1.dat");
}


//****************************************************************************
//                       FUNCTION TO SEARCH RECORD
//****************************************************************************

void querry::search()
{                                 clrscr();
int rr;
char found='n';
cout<<"\n\nEnter the serial no. of student whose record you want to search :: ";
cin>>rr;
ifstream fin;
fin.open("file1.dat",ios::binary);
while(!fin.eof())
{
fin.read((char*)&a1,sizeof a1);
if(fin.eof())
break;
if(a1.ad()==rr)
{
a1.put();
found='f';
}
}
if (found=='n')
cout<<"\n\nSORRY!! Student has no record at NIFT";
fin.close();
}


//****************************************************************************
//                        FUNCTION TO DELETE RECORD
//****************************************************************************

void querry::del()
{           clrscr();
int r;
char found='f',confirm;
ifstream fin;
fin.open("file1.dat",ios::binary);
ofstream fout("ab1.dat",ios::binary);
cout<<"\n\nEnter serial no. of student whose record you wanna delete :: ";
cin>>r;
cout<<"\n\nAlso enter the department which the student has opted(MP/BP)  ::  ";
start:
gets(dep);
if((strcmp(dep,"BP"))==0)
  --s1;
else if((strcmp(dep,"MP"))==0)
  --s2;
else
{
cout<<"\n\nSorry!!!!! You entered a wrong department !";
cout<<"\n\nPlease !! Again enter the department which the student has opted (MP/BP) :: ";
goto start;          //JUMP STATEMENT
}
while(!fin.eof())
{
  fin.read((char*)&a1,sizeof a1);
  if(fin.eof())
    break;
  if(a1.ad()==r)
  {
    found='t';
    a1.put();
    cout<<"\n\nAre you sure you wanna delete ? ";
    cin>>confirm;
    if((confirm=='n')||(confirm=='N'))
    fout.write((char*)&a1,sizeof a1);
  }
  else
  fout.write((char*)&a1,sizeof a1);
}
if(found=='f')
cout<<"\n\nSORRY!! Student has no record at NIFT";
fin.close();
fout.close();
remove("file1.dat");
rename("ab1.dat","file1.dat");

}


//****************************************************************************
//                        FUNCTION TO INSERT RECORD
//****************************************************************************

void querry::insert()
{clrscr();
int n;
char ch,last='y';
ifstream fin;
fin.open("file1.dat",ios::binary);
ofstream fout("folder1.dat",ios::binary);
cout<<"\n\nEnter the  details of student whom you wanna insert in your section :: ";
a2.get();
cout<<"\nAlso enter the department which the student has opted(MP/BP) :: ";
label:
gets(dep);
if((strcmp(dep,"BP"))==0)
  ++s1;
else if((strcmp(dep,"MP"))==0)
  ++s2;
else
{
 cout<<"\nSorry !! You entered a wrong department !!";
 cout<<"\n\nPlease !! Again enter the department which the student has opted(MP/BP) :: ";
 goto label;         //JUMP STATEMENT
}
while(!fin.eof())
{
  fin.read((char*)&a1,sizeof a1);
  if(!fin)
  break;
  if(a2.ad()<=a1.ad())
  {
    fout.write((char*)&a2,sizeof a2);
    fout.write((char*)&a1,sizeof a1);
    last='n';
    break;
  }
  else
  fout.write((char*)&a1,sizeof a1);
}
if(last=='y')
fout.write((char*)&a2,sizeof a2);
else if(!fin.eof())
{
while(!fin.eof())
{
  fin.read((char*)&a1,sizeof a1);
  if(fin.eof())
  break;
  fout.write((char*)&a1,sizeof a1);
}
}
fout.close();
fin.close();
remove("file1.dat");
rename("folder1.dat","file1.dat");

}

//****************************************************************************
//                        FUNCION TO KNOW ABOUT SUBSIDY
//****************************************************************************

void nift::subsidy()
{clrscr();
cout<<"\nEnter your parental income ::";
cin>>par_in;
if(par_in<=100000)
{
  cout<<"\nYou will get 50% subsidy by NIFT";
  cout<<"\nAmount of tuition fee to be paid by you per semester :: Rs.10000";
}
else if((par_in>100000)&&(par_in<=200000))
{
  cout<<"\nYou will get 30% subsidy";
  cout<<"\nAmount of tuition fee to be paid by you per semester :: Rs.20000";
}
else if((par_in>200000)&&(par_in<=300000))
{
  cout<<"\nYou will get 25% subsidy by NIFT";
  cout<<"\nAmount of tuition fee to be paid by you per semseter :: Rs.30000";
}
else
 cout<<"\n\nSORRY!! You would not get any subsidy at NIFT";

}

