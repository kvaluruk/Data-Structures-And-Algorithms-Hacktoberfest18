cin>>e1;
if((e1=='y')||(e1=='Y'))
 return 1;
else
 return 0;
 }

//*******************************************************************
//             THIS FUNCTION RANDOMLY DRAWS ADMISSION NOS.
//*******************************************************************

int admission::draw_nos()
{
start:
randomize();
z=random(10)+1;
b[i]=z;
for(k=i-1;k>=0;k--)
{
if(z==b[k])
goto start;
}
++i;
return z;
}


