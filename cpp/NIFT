//****************************************************************************
//  THIS FUNCTION FINDS ELIGIBILITY OF A STUDENT TO TAKE ADMISSION AT NIFT
//****************************************************************************

void verify::eligible()
{         clrscr();
cout<<"\n Give an eligibility check ::"<<endl<<endl;
cout<<"\n\n	   Wanna apply for :: "<<endl<<endl;
cout<<"\n		 1.Bachelor programme"<<endl<<endl;
cout<<"\n		 2.Master programme"<<endl<<endl;
cout<<"\n\nEnter choice :: ";
cin>>m2;
switch(m2)
{
case 1:if(s1<100)
	    bac_prog();
	  else
	    cout<<"\nSorry!! Seats are full";
break;
case 2:if(s2<100)
	    mas_prog();
	  else
	    cout<<"\nSorry!! Seats are full";
break;
default:cout<<"\n\nSorry!! You entered a wrong choice";
}
}

//****************************************************************************
//        THIS FUNCTION VERIFIES A STUDENT FOR ADMISSION AT MASTER LEVEL
//****************************************************************************

void verify::bac_prog()
{                           clrscr();
cout<<"\nEnter your age :: ";
cin>>age1;
if((age1<22)&&(age1>=18))
{
cout<<"\n\n	 In which department :: "<<endl<<endl;
cout<<"\n		1.Design"<<endl<<endl;
cout<<"\n		2.Technology"<<endl<<endl;
cout<<"\n\nEnter choice :: ";
cin>>m3;
switch(m3)
{
case 1:k1=b_design();
      if(k1==1)
      {
	cout<<"\nU can take admission at nift.";
	adm();
	++s1;
	cout<<"\n\nCongrats!!! U got admission at nift";
      }
      else if(k1==0)
	cout<<"\nU cannot take admission at nift.";
break;
case 2:k2=b_tech();
       if(k2==1)
       {
	 cout<<"\nU can take admission at nift.";
	 adm();
	 ++s1;
	 cout<<"\n\nCongrats!!! You got admission at nift";
       }
       else if(k2==0)
	 cout<<"\nSorry!! You cannot take admission at nift.";
break;
default:cout<<"\n\nSorry!! You entered a wrong choice";
}
}
else
cout<<"\nSorry!! You cannot take admission at nift";
}


