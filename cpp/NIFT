	 ++s2;
	 cout<<"\n\nCongrats!!! You got admission at nift" ;
       }
       else if(k4==0)
	 cout<<"\nYou cannot take admission at nift";
break;
case 3:k5=m_tech();
       if(k5==1)
       {
	 cout<<"\nYou can take admission at nift";
